<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Manageitem">

    <TextView
        android:id="@+id/mange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage item"
        android:textSize="32sp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>


    <TextView
        android:id="@+id/cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingLeft="15dp"
        android:text="Non-Veg"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/mange"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/itemlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cat"
        android:layout_marginTop="15dp"/>

<!--    Category veg-->

    <TextView
        android:id="@+id/cat1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingLeft="15dp"
        android:text="Veg"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/itemlist"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/itemlist1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cat1"
        android:layout_marginTop="15dp"/>


    <!--        Beverages -->

    <TextView
        android:id="@+id/cat3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingLeft="15dp"
        android:text="Beverages"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/itemlist1"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/itemlist2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cat3"
        android:layout_marginTop="15dp"/>

    <!--        Fast Food -->

    <TextView
        android:id="@+id/cat4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingLeft="15dp"
        android:text="Fast Food"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/itemlist2"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/itemlist3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cat4"
        android:layout_marginTop="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>